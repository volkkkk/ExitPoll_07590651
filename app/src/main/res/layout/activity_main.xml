<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/vote_no_b"
        android:layout_width="312dp"
        android:layout_height="62dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="งดออกเสียง"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/vote_3_b"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/vote_3_b"
        app:layout_constraintTop_toBottomOf="@+id/vote_3_b" />

    <Button
        android:id="@+id/vote_3_b"
        android:layout_width="312dp"
        android:layout_height="62dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="ผู้สมัครหมายเลข 3"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/vote_2_b"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/vote_2_b"
        app:layout_constraintTop_toBottomOf="@+id/vote_2_b" />

    <ImageView
        android:id="@+id/logo_view"
        android:layout_width="348dp"
        android:layout_height="129dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.018"
        app:srcCompat="@drawable/exit_poll" />

    <Button
        android:id="@+id/vote_2_b"
        android:layout_width="312dp"
        android:layout_height="62dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="ผู้สมัครหมายเลข 2"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/vote_1_b"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/vote_1_b"
        app:layout_constraintTop_toBottomOf="@+id/vote_1_b" />

    <Button
        android:id="@+id/vote_1_b"
        android:layout_width="312dp"
        android:layout_height="62dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="ผู้สมัครหมายเลข 1"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_view"
        app:layout_constraintVertical_bias="0.002" />

    <Button
        android:id="@+id/point_view_b"
        android:layout_width="365dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="84dp"
        android:text="ดูผล"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/vote_no_b"
        app:layout_constraintHorizontal_bias="0.426"
        app:layout_constraintStart_toStartOf="@+id/vote_no_b"
        app:layout_constraintTop_toBottomOf="@+id/vote_no_b" />
</android.support.constraint.ConstraintLayout>