<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreActivity">

    <ListView
        android:id="@+id/result_list_view"
        android:layout_width="300dp"
        android:layout_height="429dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123" />

    <Button
        android:id="@+id/set_0_b"
        android:layout_width="365dp"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:text="ล้างข้อมูล"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/result_list_view"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/result_list_view"
        app:layout_constraintTop_toBottomOf="@+id/result_list_view" />
</android.support.constraint.ConstraintLayout>